<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .navbar {
        background-color: rgb(255, 255, 255);
        padding: 10px 20px;
        height: 60px;

    }

    .nav-link {
        color: rgb(0, 0, 0) !important;
    }

    .navbar-logo {
        height: 40px;

        margin-right: 20px;

    }

    .navbar-icons a {
        font-size: 24px;
        color: black;
        text-decoration: none;
        margin-left: 15px;
        transition: 0.3s ease;
    }

    .navbar-icons a :hover {
        transform: scale(1.2);

    }

    .nav-link:hover {
        background-color: rgb(0, 0, 0);
        color: rgb(255, 255, 255) !important;

    }

    .cart-icon-wrapper {
        position: relative;
        display: inline-block;
    }

    .cart-counter {
        position: absolute;
        top: -8px;
        right: -8px;
        background-color: rgb(148, 204, 232);
        color: rgb(0, 0, 0);
        font-size: 10px;
        border-radius: 50%;
        padding: 2px 5px;
        line-height: 1;
        min-width: 16px;
        height: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    @media only screen and (max-width:990px) {
        .collapse {
            background-color: rgb(255, 255, 255);
            border-radius: 10px;
            padding: 5px;
            margin: 1px;
        }

        .collapse .nav-link {
            border: 1px dotted black;
            border-radius: 10px;
            padding: 5px;
            margin: 3px;
        }


    }
</style>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <img src="/images/logo.svg" alt="Logo" class="navbar-logo">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link active" href="/user/home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">ABOUT US</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/productList">STORE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">CONTACT US</a>
                </li>
            </ul>

            <div class="navbar-icons">
                <a href="/user/wishlist" title="Wishlist"><i class="fa-regular fa-heart"></i></a>
                <a href="/user/cart" title="Cart" class="cart-icon-wrapper">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span class="cart-counter">
                        <%= locals.cartCount %>
                    </span>
                </a>
                <a href="/user/profile" title="User Profile"><i class="fa-regular fa-user"></i></a>
            </div>
        </div>
    </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function updateNavCartCount() {
        fetch('/user/cart/count')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    const cartCounter = document.querySelector('.cart-counter');
                    if (cartCounter) {
                        cartCounter.textContent = data.cartCount;
                    }
                }
            })
            .catch(error => {
                console.error('Error updating cart count:', error);
            });
    }
</script>